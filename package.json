{
	"name": "dota2-tools",
	"displayName": "dota2-作图工具",
	"description": "dota2 作图工具",
	"version": "0.1.2",
	"icon": "images/logo.png",
	"publisher": "bigciba",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:dota2tools.Localization",
		"onCommand:extension.AddHero",
		"onView:nodeDependencies"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dota2tools.Localization",
				"title": "合并文本"
			},
			{
				"command": "extension.AddHero",
				"title": "添加英雄",
				"icon": {
					"light": "./images/hero_light.svg",
					"dark": "./images/hero_dark.svg"
				}
			},
			{
				"command": "dota2tools.OpenKV",
				"title": "转到技能kv"
			},
			{
				"command": "extension.OpenLang",
				"title": "转到文本"
			},
			{
				"command": "extension.OpenAPI",
				"title": "打开API"
			},
			{
				"command": "extension.GenerateAPI",
				"title": "生成API"
			},
			{
				"command": "extension.NoteAPI",
				"title": "注释API"
			},
			{
				"command": "extension.GenerateDocument",
				"title": "生成API文档"
			},
			{
				"command": "dota2tools.vsnd_selector",
				"title": "vsnd转换",
				"icon": {
					"light": "./images/vsnd_light.svg",
					"dark": "./images/vsnd_dark.svg"
				}
			},
			{
				"command": "dota2tools.kv_to_csv",
				"title": "kv转csv"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resource =~ /abilities/ && resourceExtname == '.lua'",
					"command": "dota2tools.OpenKV",
					"group": "navigation"
				},
				{
					"when": "resource =~ /abilities/ && resourceExtname == '.lua' || resourceExtname == '.kv'",
					"command": "extension.OpenLang",
					"group": "navigation"
				},
				{
					"command": "extension.OpenAPI",
					"group": "navigation"
				},
				{
					"when": "editorHasSelection",
					"command": "extension.NoteAPI",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "extension.AddHero",
					"group": "navigation"
				},
				{
					"command": "dota2tools.vsnd_selector",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Dota2插件",
			"properties": {
				"dota2-tools.addon_path": {
					"type": "string",
					"default": "",
					"description": "dota2项目路径"
				},
				"dota2-tools.abilities_excel_path": {
					"type": "object",
					"default": {},
					"scope": "window",
					"description": "监听技能excel路径"
				},
				"dota2-tools.abilities_kv_path": {
					"type": "object",
					"default": {},
					"scope": "window",
					"description": "输出技能kv路径"
				},
				"dota2-tools.units_excel_path": {
					"type": "object",
					"default": {
						"0": ""
					},
					"scope": "window",
					"description": "监听单位excel路径"
				},
				"dota2-tools.units_kv_path": {
					"type": "object",
					"default": {
						"0": ""
					},
					"scope": "window",
					"description": "输出单位kv路径"
				},
				"dota2-tools.Listen Localization": {
					"type": "boolean",
					"default": true,
					"description": "是否监听文本变更"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "Package Explorer",
					"icon": "images/dep.svg"
				}
			]
		},
		"views": {
			"package-explorer": [
				{
					"id": "nodeDependencies",
					"name": "Node Dependencies"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"repository": {
		"type": "git",
		"url": "https://gitee.com/bigciba/dota2-tools.git"
	},
	"dependencies": {
		"@types/node-xlsx": "^0.15.0",
		"@types/watch": "^1.0.1",
		"node-xlsx": "^0.15.0",
		"watch": "^1.0.2"
	}
}
