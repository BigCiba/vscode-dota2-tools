{
	"name": "dota2-tools",
	"displayName": "dota2-IMBA插件",
	"description": "dota2 IMBA项目辅助工具",
	"version": "0.0.15",
	"icon": "images/logo.png",
	"publisher": "bigciba",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:extension.Localization",
		"onCommand:extension.AddHero",
		"onView:nodeDependencies"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.Localization",
				"title": "合并文本"
			},
			{
				"command": "extension.AddHero",
				"title": "添加英雄",
				"icon": {
					"light": "./images/hero_light.svg",
					"dark": "./images/hero_dark.svg"
				}
			},
			{
				"command": "extension.OpenKV",
				"title": "转到技能kv"
			},
			{
				"command": "extension.OpenLang",
				"title": "转到文本"
			},
			{
				"command": "extension.OpenAPI",
				"title": "打开API"
			},
			{
				"command": "extension.GenerateAPI",
				"title": "生成API"
			},
			{
				"command": "extension.NoteAPI",
				"title": "注释API"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resource =~ /abilities/ && resourceExtname == '.lua'",
					"command": "extension.OpenKV",
					"group": "navigation"
				},
				{
					"when": "resource =~ /abilities/ && resourceExtname == '.lua' || resourceExtname == '.kv'",
					"command": "extension.OpenLang",
					"group": "navigation"
				},
				{
					"command": "extension.OpenAPI",
					"group": "navigation"
				},
				{
					"when": "editorHasSelection",
					"command": "extension.NoteAPI",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "extension.AddHero",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Dota2插件",
			"properties": {
				"dota2-tools.addon_path": {
					"type": "string",
					"default": "",
					"description": "dota2项目路径"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "Package Explorer",
					"icon": "images/dep.svg"
				}
			]
		},
		"views": {
			"package-explorer": [
				{
					"id": "nodeDependencies",
					"name": "Node Dependencies"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"repository": {
		"type": "git",
		"url": "https://gitee.com/bigciba/dota2-tools.git"
	},
	"dependencies": {
		"@types/watch": "^1.0.1",
		"watch": "^1.0.2"
	}
}
